{% extends 'base.html.twig' %}

{% block body %}

    <div id="bcontact">

    <div class="container" >
    <h1 class="row justify-content-center">  </h1>

    <div class="fef">


        <!-- Contact Form -->
        {{ form_start(form) }}

        <div class="g-mb-20">


            {% if form_errors(form.name) %}
                <div class="alert alert-danger">
                </div>
            {% endif %}

            {{ form_widget(form.name) }}
        </div>

        <div class="g-mb-20">
<br>
            {% if form_errors(form.email) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.email) }}
                </div>
            {% endif %}

            {{ form_widget(form.email) }}
        </div>
        <div class="g-mb-20">
<br>
            {% if form_errors(form.message) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.message) }}
                </div>
            {% endif %}

            {{ form_widget(form.message) }}



        <div class="g-mb-20">
            {{ form_label(form.message) }}

            {% if form_errors(form.message) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.message) }}
                </div>
            {% endif %}

            {{ form_widget(form.message) }}
        </div>
        <button class="buttonss">
            Envoyer
        </button>
        </div>
        <br>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" >
                {{ message }}
            </div>
        {% endfor %}

        {{ form_end(form) }}
        <!-- End Contact Form -->
        <iframe class="mappp" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10533.953443629187!2d1.847679!3d48.696146!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x9bb6954c3902b047!2sBiker+Now!5e0!3m2!1sfr!2sfr!4v1562081394826!5m2!1sfr!2sfr" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>

    </div>
    </div>
    </div>

{% endblock %}
